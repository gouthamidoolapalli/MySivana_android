<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="@dimen/dimen_12">

                <com.mysivana.custom.MSTextView
                    android:id="@+id/tv_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vijaya Supermarket"
                    android:textColor="@color/colorMineShaft"
                    android:textSize="@dimen/textsize_20"
                    app:fontName="Roman" />

                <com.mysivana.custom.MSTextView
                    android:id="@+id/tv_business_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Plot No. 28, Manasa Nest, Radhika To Moula-Ali Road, Moulali Road, I.E. Moula-Ali, MJ Colony, ECIL, Secunderabad, Telangana 500062"
                    android:textColor="@color/colorMineShaft"
                    android:textSize="@dimen/textsize_14"
                    app:fontName="Roman" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="5">

                    <android.support.design.widget.TextInputLayout
                        style="@style/Match.Wrap"
                        android:layout_width="0dp"
                        app:hintTextAppearance="@style/TextLabel"
                        android:layout_weight="2"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_5">

                        <com.mysivana.custom.MSEditText
                            android:id="@+id/tv_full_name"
                            style="@style/Match.Wrap"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/hint_full_name"
                            android:inputType="none"
                            app:fontName ="Roman"
                            android:paddingTop="@dimen/dimen_5"
                            android:text="Naresh Poola"
                            android:textColor="@color/colorMineShaft"
                            android:textSize="@dimen/textsize_14" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/Match.Wrap"
                        android:layout_width="@dimen/textsize_20"
                        android:layout_weight="3"
                        app:hintTextAppearance="@style/TextLabel"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingBottom="@dimen/dimen_5">

                        <com.mysivana.custom.MSEditText
                            android:id="@+id/tv_customer_email"
                            style="@style/Match.Wrap"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/hint_email"
                            android:inputType="none"
                            app:fontName ="Roman"
                            android:paddingTop="@dimen/dimen_5"
                            android:text="pulanaresh@gmail.com"
                            android:textColor="@color/colorMineShaft"
                            android:textSize="@dimen/textsize_14" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSignUpTransparant"
                android:orientation="horizontal">

                <com.mysivana.custom.MSTextView
                    android:id="@+id/tv_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_phone_call"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_12"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:text="@string/contact"
                    android:textColor="@color/colorPrimary"
                    app:fontName="Roman" />

                <View style="@style/Divider_horizontal" />

                <com.mysivana.custom.MSTextView
                    android:id="@+id/tv_direction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_directions"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_12"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:text="@string/get_direction"
                    android:textColor="@color/colorPrimary"
                    app:fontName="Roman" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>