<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1330"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080" >

    <shape
        android:innerRadius="14dp"
        android:shape="ring"
        android:thickness="3dp"
        android:useLevel="false" >
        <size
            android:height="36dp"
            android:width="36dp" />

        <gradient
            android:centerColor="#8046B860"
            android:centerY="0.5"
            android:endColor="#FF46B860"
            android:startColor="#0046B860"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>